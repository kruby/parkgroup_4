<div class="container">

	<h1>Viser vouchers</h1>
	<div class="table-responsive">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th class="visible-lg text-right">Timer</th>
					<th class="visible-lg">Relation</th>
					<th class="visible-lg">Dato</th>
					<th class="visible-lg">Ansvarlig</th>
					<th class="visible-lg">Timesats</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @vouchers.each do |voucher| %>
					<tr>
						<td class="visible-lg text-right"><%= number_with_precision(voucher.number, precision: 0) %></td>
						<td class="visible-lg"><%= link_to(truncate(Relation.find(voucher.relation_id).company, length: 20), edit_relation_path(voucher.relation_id)) %></td>
						<td class="visible-lg"><%= nice_date(voucher.date) %></td>
						<td class="visible-lg">
							<% @user_id = Relation.find(voucher.relation_id).user_id %>
							<%= User.find(@user_id.to_i).name rescue nil %>
						</td>
						<td class="visible-lg"><%= voucher.hourly_rate %></td>
						<td colspan="3" class="right">
							<div class="btn-group">
								<%= link_to 'Vis', voucher, class: 'btn btn-default btn-xs' %>
								<%= link_to 'Ret', edit_voucher_path(voucher), class: 'btn btn-default btn-xs' %>
								<%= link_to 'Slet', voucher, method: :delete, data: { confirm: 'Er du sikker?' }, class: 'btn btn-default btn-xs' %>
							</div>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<br>
	
	<%= link_to 'Ny Voucher', new_voucher_path %>

</div>