<div class="container">
	
	<h2>Viser alle partners 
		<div class="btn-group">
			<%= link_to 'Ny Partner', new_partner_path, class: 'btn btn-default btn-xs' %>
			<%= link_to 'Find alle', partners_path, class: 'btn btn-default btn-xs' %>
		</div>
	</h2>	
	
	<div class="row">
		<div class="col-lg-4">
			<%= search_form_for @q do |f| %>
			<%= f.label :navn_cont, "Navn indeholder" %>
			<div class="input-group">
				<%= f.text_field :name_cont, size: 16, class: 'form-control' %>
				<span class="input-group-btn">
					<%= f.submit "SÃ¸g", :class => 'btn btn-default'  %>
				</span>
			</div>
			<% end %>
		</div>
	</div>	



	<div class="table-responsive">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th class="">Navn</th>
					<th class="text-center visible-sm visible-md visible-lg">Kategori</th>
					<th class="text-center visible-sm visible-md visible-lg">Ansvar</th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
				<% @partners.each do |partner| %>
					<tr>
						<td class="visible-sm visible-md visible-lg"><%= partner.name %></td>
						<td class="visible-xs"><%= truncate(partner.name, length: 15) %></td>
						<td class="text-center visible-sm visible-md visible-lg"><%= partner.category %></td>
						<td class="text-center visible-sm visible-md visible-lg"><%= partner.responsible %></td>
						<td colspan="3" class="text-right">
							<div class="btn-group">
								<%#= link_to 'Vis', partner, class: 'btn btn-default btn-xs' %>
								<%= link_to 'Ret', edit_partner_path(partner), class: 'btn btn-default btn-xs' %>
								<%= link_to 'Slet', partner, method: :delete, data: { confirm: 'Er du sikker?' }, class: 'btn btn-default btn-xs' %>
							</div>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>