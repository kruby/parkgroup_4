<div class="container">

	<h1>Viser menus</h1>
	<div class="table-responsive">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th class="visible-lg">Name</th>
					<th class="visible-lg">Title</th>
					<th class="visible-lg">Active</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @menus.each do |menu| %>
					<tr>
						<td class="visible-lg"><%= menu.name %></td>
						<td class="visible-lg"><%= menu.title %></td>
						<td class="visible-lg"><%= menu.active %></td>
						<td colspan="3" class="right">
							<div class="btn-group">
								<%= link_to 'Vis', menu, class: 'btn btn-default btn-xs' %>
								<%= link_to 'Ret', edit_menu_path(menu), class: 'btn btn-default btn-xs' %>
								<%= link_to 'Slet', menu, method: :delete, data: { confirm: 'Er du sikker?' }, class: 'btn btn-default btn-xs' %>
							</div>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<br>
	
	<%= link_to 'Ny Menu', new_menu_path %>

</div>