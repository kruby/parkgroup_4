<div class="container">
	<h2>Viser alle <%= t :menus %>
		<div class="btn-group">
			<%= link_to 'Ny Menu', new_menu_path, class: 'btn btn-default btn-xs' %>
			<%= link_to 'Find alle', menus_path, class: 'btn btn-default btn-xs' %>
		</div>
	</h2>
	<div class="table-responsive">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th class="">Navn</th>
					<th class="">Titel</th>
					<th class="text-center">Aktiv</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @menus.each do |menu| %>
					<tr>
						<td class=""><%= menu.name %></td>
						<td class=""><%= menu.title %></td>
						<td class="text-center">
							<% if menu.active == true %>
								<%= link_to('+', menu_active_path(menu.id), {class: 'btn btn-xs btn-default activated'}) %>
							<% else %>
								<%= link_to('-', menu_active_path(menu.id), {class: 'btn btn-xs btn-default passified'}) %>
							<% end %>
						</td>
						<td colspan="3" class="right">
							<div class="btn-group">
								<%#= link_to 'Vis', menu, class: 'btn btn-default btn-xs' %>
								<%= link_to 'Ret', edit_menu_path(menu), class: 'btn btn-default btn-xs' %>
								<%= link_to 'Slet', menu, method: :delete, data: { confirm: 'Er du sikker?' }, class: 'btn btn-default btn-xs' %>
							</div>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>