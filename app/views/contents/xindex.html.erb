<div class="container">
	<h1>Listing contents</h1>

	<table class="table table-striped table-hover">

		<thead>
			<tr>
				<th>Resource</th>
				<th>Resource type</th>
				<th>Parent</th>
				<th>Navlabel</th>
				<th>Aktiv</th>
				<th>Admin</th>
				<th>Redirect</th>
				<th>Position</th>
				<th>Controller name</th>
				<th>Category</th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
		</thead>

		<tbody class="table-striped">
			<% @contents.each do |content| %>
			<tr>
				<td><%= content.resource_id %></td>
				<td><%= content.resource_type %></td>
				<td><%= content.parent_id %></td>
				<td><%= content.navlabel %></td>
				<td><%= link_to content.active == true ? '√' : '–', content_active_path(content.id) %></td>
				<td><%= link_to content.admin == true ? '√' : '–', content_admin_path(content.id) %></td>
				<td><%= link_to content.redirect == true ? '√' : '–', content_redirect_path(content.id) %></td>
				<td><%= content.position %></td>
				<td><%= content.controller_name %></td>
				<td><%= link_to content.category, change_category_path(content.id) %></td>
				<td colspan="3" class="right">
					<div class="btn-group">
						<%= link_to 'Vis', content, class: 'btn btn-default btn-xs'%>
						<%= link_to 'Ret', edit_content_path(content), class: 'btn btn-default btn-xs' %>
						<%= link_to 'Slet', content, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-xs' %>
					</div>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>

	<br>

	<%= link_to 'New Content', new_content_path %>

</div>