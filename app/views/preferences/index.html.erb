<div class="container">

	<h1>Viser indstillinger
		<div class="btn-group index">
			<%= link_to 'Ny indstilling', new_preference_path, class: 'btn btn-default btn-xs' %>
		</div>
	</h1>
	<div class="table-responsive">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th class="visible-lg">Navn</th>
					<th class="visible-lg">VÃ¦rdi</th>
					<th class="visible-lg">Oprettet af</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @preferences.each do |preference| %>
					<tr>
						<td class="visible-lg"><%= preference.name %></td>
						<td class="visible-lg"><%= preference.value %></td>
						<td class="visible-lg"><%= User.find(preference.user_id).name %></td>
						<td colspan="3" class="right">
							<div class="btn-group">
								<%#= link_to 'Vis', preference, class: 'btn btn-default btn-xs' %>
								<%= link_to 'Ret', edit_preference_path(preference), class: 'btn btn-default btn-xs' %>
								<%= link_to 'Slet', preference, method: :delete, data: { confirm: 'Er du sikker?' }, class: 'btn btn-default btn-xs' %>
							</div>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>