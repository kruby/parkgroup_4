<!-- Vi opdeler med content_for sÃ¥ vi kan styre hvad der bliver indsat hvor i viewer.html.erb under layouts -->
<% content_for :head do %>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title><%= content_for?(:title) ? yield(:title) : "Bootstrap Test" %></title>
	<meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Bootstrap Test" %>">
	<link href="/assets/mini.gif" rel="shortcut icon"/>
	<%= stylesheet_link_tag "application", media: "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
<% end%>

<% content_for :body do %>
	<header>
		<%= image_tag "parkgroup_logo.png", :class => 'img-responsive', :alt => 'Responsive image' %>
		<%= render 'menusystem/navigation' %>
	</header>
	<main role="main">
		<%= render 'viewer/partials/messages' %>
	</main>
	<div class="container">
		<h1 class="forside">Velkommen til Park Group <small class="forside">udlejning af erhvervsejendomme</small></h1><br>
		<%= render 'viewer/partials/carousel'%><br>
		<%= raw textilize(@content) %><br>
		<h2>Bloggen</h2>
		<%= render 'viewer/partials/blog_posts'%>
	</div>
<% end %>