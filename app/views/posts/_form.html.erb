<%= form_for(@post, html: {class: 'form-horizontal', role: 'form'}) do |f| %>
<% if @post.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@post.errors.count, "error") %> forhindrede denne post fra at blive vist:</h2>
	<ul>
		<% @post.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="form-group">
	<%= f.label :title, class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">	
		<%= f.text_field :title, class: 'form-control' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :body, class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">	
		<%= f.text_area :body, class: 'form-control' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :priority, class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">	
		<%= f.number_field :priority, class: 'form-control' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :parent_id, class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">	
		<%= f.number_field :parent_id, class: 'form-control' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :user_id, class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">	
		<%= f.number_field :user_id, class: 'form-control' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :active, class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">	
		<%= f.check_box :active, class: 'form-control' %>
	</div>
</div>

<div class='form-group'>
	<div class="actions col-sm-offset-2 col-sm-10">
		<%= f.submit('Opdater', class: 'btn btn-info btn-xs') %>
	</div>
</div>
<% end %>