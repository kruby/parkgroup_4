<div class="container">

	<h1>Viser posts</h1>
	<div class="table-responsive">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>Title</th>
					<th class="visible-lg">Body</th>
					<th class="visible-lg">Author</th>
					<th class="visible-lg">Priority</th>
					<th class="visible-lg">Parent</th>
					<th class="visible-lg">User</th>
					<th class="visible-lg">Aktiv</th>
					<!-- <th class="visible-lg">Oprettet</th> -->
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @posts.each do |post| %>
					<tr>
						<td><%= post.title %></td>
						<td class="visible-lg"><%= truncate(post.body, length: 50) %></td>
						<td class="visible-lg"><%= post.author %></td>
						<td class="visible-lg"><%= post.priority %></td>
						<td class="visible-lg"><%= post.parent_id %></td>
						<td class="visible-lg"><%= post.user_id %></td>
						<td class="visible-lg"><%= post.active %></td>
						<!-- <td class="visible-lg"><%= nice_date(post.created_at) %></td> -->
						<td colspan="3" class="right">
							<div class="btn-group">
								<%= link_to 'Vis', post, class: 'btn btn-default btn-xs' %>
								<%= link_to 'Ret', edit_post_path(post), class: 'btn btn-default btn-xs' %>
								<%= link_to 'Slet', post, method: :delete, data: { confirm: 'Er du sikker?' }, class: 'btn btn-default btn-xs' %>
							</div>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<br>
	
	<%= link_to 'Ny Post', new_post_path %>

</div>