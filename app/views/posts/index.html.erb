<div class="container">

	<h1>Viser posts</h1>
	<div class="table-responsive">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>Title</th>
					<th class="visible-lg visible-md visible-sm">Body</th>
					<th class="text-center visible-lg visible-md visible-sm">Author</th>
					<th class="text-center visible-lg visible-md visible-sm">Priority</th>
					<!-- <th class="text-center visible-lg visible-md visible-sm">Parent</th> -->
					<!-- <th class="text-center visible-lg visible-md visible-sm">User</th> -->
					<th class="text-center">Aktiv</th>
					<!-- <th class="visible-lg">Oprettet</th> -->
					<th colspan="3" width="110px"></th>
				</tr>
			</thead>

			<tbody>
				<% @posts.each do |post| %>
					<tr>
						<td><%= truncate(post.title, length: 20) %></td>
						<td class="visible-lg visible-md visible-sm"><%= truncate(post.body, length: 30) %></td>
						<td class="text-center visible-lg visible-md visible-sm"><%= User.find(post.user_id).blogname %></td>
						<td class="text-center visible-lg visible-md visible-sm"><%= post.priority %></td>
						<!-- <td class="text-center visible-lg visible-md visible-sm"><%= post.parent_id %></td> -->
						<!-- <td class="text-center visible-lg visible-md visible-sm"><%= post.user_id %></td> -->
						<td class="text-center"><%= link_to post.active == true ? '√' : '–', post_active_path(post.id) %></td>
						<!-- <td class="visible-lg"><%= nice_date(post.created_at) %></td> -->
						<td colspan="3" class="right col-sm-2">
							<div class="btn-group">
								<%#= link_to 'Vis', post, class: 'btn btn-default btn-xs' %>
								<%= link_to 'Ret', edit_post_path(post), class: 'btn btn-default btn-xs' %>
								<%= link_to 'Slet', post, method: :delete, data: { confirm: 'Er du sikker?' }, class: 'btn btn-default btn-xs' %>
							</div>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<br>
	
	<%= link_to 'Ny Post', new_post_path %>

</div>