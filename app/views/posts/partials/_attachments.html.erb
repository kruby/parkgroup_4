				// 		helpers			: {
				// 		title			: { type : 'inside' },
				// 		buttons			: {}
				// 		}
				// 	});
				// });

				$(document).ready(function() {
				  $("a.fancybox-button").fancybox();
				});
		    </script>

			<% end %>

			<% end %>


		</table>

	</div>
</div>