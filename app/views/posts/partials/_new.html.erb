<div class="col-sm-offset-2 col-sm-10">
	<h2 class="move-left">Nyt blog indl√¶g
		<div class="btn-group">
			<%#= link_to 'Vis', @post, class: 'btn btn-default btn-xs' %>
			<%= link_to 'Tilbage', posts_path, class: 'btn btn-default btn-xs' %>
