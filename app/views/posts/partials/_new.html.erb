<%= form_for(@post, html: {class: 'form-horizontal', role: 'form'}) do |f| %>
<%= f.hidden_field(:user_id, :value => current_user.id) %>

<%= render :partial => "posts/partials/errors", local: @post %>

<div class="form-group">
	<%= f.label :titel, class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">	
		<%= f.text_field :title, class: 'form-control' %>
	</div>
</div>

<div class="form-group">
	<%= f.label :indhold, class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">	
		<%= f.text_area :body, class: 'form-control', rows: '10' %>
	</div>
</div>

<div class="form-group">
	<div class="actions col-sm-offset-2 col-sm-10">
		<%= f.submit('Opdater', class: 'btn btn-info btn-xs') %>
	</div>
</div>

<% end %>