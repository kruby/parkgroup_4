<% @year = l hour.date, format: :year %>
<%# @year_number = hour.date.month %>
<!-- l betyder at vi bruger I18 pÃ¥ hour.date og formatet :year under :date delen i da.yml filen -->

<% if @year != @year_previous %>

	<% @year_previous = @year %>

	<% if session[:year] == @year.to_s %>

		<tr>
			<td colspan=5><span class='year'><%= @year %> - <%= number_with_delimiter(@partner.hours.year_hours(hour.date).sum(:number), locale: :da) rescue nil %></span></td>
				<td class='pos'>
						<%= link_to '[Skjul]', hide_months_public_path(partner_id: session[:partner_id], q: params[:q]), class: 'hide' %>
				</td>
		</tr>

	<% else %>
		<tr>
			<td colspan=5><span class='year'><%= @year %> - <%= number_with_delimiter(@partner.hours.year_hours(hour.date).sum(:number), locale: :da) rescue nil %></span></td>
			<td class='pos'>
					<%= link_to '[Vis]', show_months_public_path(partner_id: session[:partner_id], year: @year, q: params[:q]) %>
			</td>
		</tr>
	<% end %>

<% end %>


<% if session[:year] == @year.to_s %>

	<%= render partial: "partners/partials/months_specified_public", locals: {hour: hour} %>

<% end %>
