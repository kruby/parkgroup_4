<% @month_name = l hour.date, format: :month %>
<% @month_number = hour.date.month %>
<!-- l betyder at vi bruger I18 pÃ¥ hour.date og formatet :month under :date delen i da.yml filen -->
		
<% if @month_number != @month_previous %>

<% @month_previous = @month_number %>

<tr>
	<td colspan=6>
		<span class='month'>
			<%= @month_name.capitalize %> - <%= number_with_delimiter(@relation.hours.month_hours(hour.date).sum(:number), locale: :da) rescue nil %>
		</span>
	</td>
	<td colspan=6 class='text-right'>
		<span class='month_link'>
			<% if session[:relation_id] == hour.relation_id.to_s and session[:month] == @month_number.to_s %>
				<%= link_to '[Skjul]', hide_days_path(relation_id: session[:relation_id], q: params[:q]) %>
			<% else %>
				<%= link_to '[Vis]', show_days_path(relation_id: session[:relation_id], month: @month_number, q: params[:q]) %>
			<% end %>
		</span>
	</td>
</tr>

<% if session[:relation_id] == hour.relation_id.to_s and session[:month] == @month_number.to_s %>		
	<%= render partial: 'hours/partials/days_specified', locals: {hour: hour} %>
<% end %>	
				
	

<% end %>


