<%= form_for(@hour, html: {class: 'form-horizontal', role: 'form'}) do |f| %>
<% if @hour.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@hour.errors.count, "error") %> forhindrede denne hour fra at blive vist:</h2>
	<ul>
		<% @hour.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="form-group">
	<%= f.label :description, class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">	
		<%= f.text_field :description, class: 'form-control' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :number, class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">	
		<%= f.text_field :number, class: 'form-control' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :date, class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">	
		<%= f.date_select :date, class: 'form-control' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :user_id, class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">	
		<%= f.number_field :user_id, class: 'form-control' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :partner_id, class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">	
		<%= f.number_field :partner_id, class: 'form-control' %>
	</div>
</div>

<div class='form-group'>
	<div class="actions col-sm-offset-2 col-sm-10">
		<%= f.submit('Opdater', class: 'btn btn-info btn-xs') %>
	</div>
</div>
<% end %>