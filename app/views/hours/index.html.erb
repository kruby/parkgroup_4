<div class="container">

	<h1>Viser hours</h1>
	<div class="table-responsive">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th class="visible-lg">Description</th>
					<th class="visible-lg">Number</th>
					<th class="visible-lg">Number</th>
					<th class="visible-lg">Date</th>
					<th class="visible-lg">User</th>
					<th class="visible-lg">Relation</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @hours.each do |hour| %>
					<tr>
						<td class="visible-lg"><%= hour.description %></td>
						<td class="visible-lg"><%= hour.number %></td>
						<td class="visible-lg"><%= hour.number %></td>
						<td class="visible-lg"><%= hour.date %></td>
						<td class="visible-lg"><%= hour.user_id %></td>
						<td class="visible-lg"><%= hour.relation_id %></td>
						<td colspan="3" class="right">
							<div class="btn-group">
								<%= link_to 'Vis', hour, class: 'btn btn-default btn-xs' %>
								<%= link_to 'Ret', edit_hour_path(hour), class: 'btn btn-default btn-xs' %>
								<%= link_to 'Slet', hour, method: :delete, data: { confirm: 'Er du sikker?' }, class: 'btn btn-default btn-xs' %>
							</div>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<br>
	
	<%= link_to 'Ny Hour', new_hour_path %>

</div>