<%= form_for(@user, html: {class: 'form-horizontal', role: 'form'}) do |f| %>
<% if @user.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@user.errors.count, "error") %> forhindrede denne user fra at blive vist:</h2>
	<ul>
		<% @user.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="form-group">
	<%= f.label :name, class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">	
		<%= f.text_field :name, class: 'form-control' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :email, class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">	
		<%= f.text_field :email, class: 'form-control' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :remember_token, class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">	
		<%= f.text_field :remember_token, class: 'form-control' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :remember_token_expires_at, class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">	
		<%= f.datetime_select :remember_token_expires_at, class: 'form-control' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :active, class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">	
		<%= f.check_box :active, class: 'form-control' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :category, class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">	
		<%= f.text_field :category, class: 'form-control' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :blogname, class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">	
		<%= f.text_field :blogname, class: 'form-control' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :password_hash, class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">	
		<%= f.text_field :password_hash, class: 'form-control' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :password_salt, class: 'col-sm-2 control-label' %>
	<div class="col-sm-10">	
		<%= f.text_field :password_salt, class: 'form-control' %>
	</div>
</div>

<div class='form-group'>
	<div class="actions col-sm-offset-2 col-sm-10">
		<%= f.submit('Opdater', class: 'btn btn-info btn-xs') %>
	</div>
</div>
<% end %>