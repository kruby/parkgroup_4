<% @system_menu.each do |level_1| -%>
<% @no_route = 'No route ' + level_1.navlabel %>
<li>
	<% if level_1.redirect? %>
	<%= link_to level_1.navlabel, {controller: level_1.controller_redirect, action: level_1.action_redirect} rescue link_to @no_route.html_safe %>
	<% else %>
		<% if level_1.controller_name == 'forside'%>
		<%= link_to level_1.controller_name.mb_chars.capitalize, root_url %>
		<% else %>
		<%= link_to level_1.navlabel, {controller: level_1.controller_name} rescue link_to @no_route.html_safe %>
		<!-- Alle admin sider ledes videre til deres index i views -->
		<% end %>
	<% end %>
	<%#= render :partial => "menusystem/menu_public_level_2", :locals => {:level_1 => level_1} %>
</li>
<% end -%>
